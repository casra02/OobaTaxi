<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.google.ar.core.examples.java.requestRide.RequestRideActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:text="Pick-Up Point"
    android:textAlignment="center"
    android:textSize="26dp"
    android:textColor="#000000"
    />
    <fragment
        android:id="@+id/pick_up_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        tools:context="com.google.ar.core.examples.java.requestRide.RequestRideActivity"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Drop-off Point"
        android:textSize="26dp"
        android:textColor="#000000"
        />
    <fragment
        android:id="@+id/drop_off_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        tools:context="com.google.ar.core.examples.java.requestRide.RequestRideActivity"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="Search Available Carpools"
        android:padding="10dp"
        android:background="#000000"
        android:textColor="#FFFFFF" />

</LinearLayout>